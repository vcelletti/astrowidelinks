---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import TypewriterText from "../components/TypewriterText";
import ToggleTheme from "../components/ToggleTheme.jsx";

const links = [
  {
    name: "Developer Portfolio",
    url: "https://www.jorge-perez.dev/",
    icon: "terminal",
  },
  {
    name: "GitHub",
    url: "https://github.com/JPerez00",
    icon: "github",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/jperez0/",
    icon: "linkedin",
  },
  {
    name: "Twitter / X",
    url: "https://x.com/jperezverse",
    icon: "twitter",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/lensgrime/",
    icon: "instagram",
  },
];
---

<Layout>
  <main
    class="mt-8 mx-auto w-full max-w-xl text-center"
  >

    <!-- Use the React toggle with a client directive to make it interactive -->
    <div class="text-end">
      <ToggleTheme client:load />
    </div>

    <!-- Profile Image -->
    <img
      src="/astrolinks/portrait.webp"
      alt="Profile Picture"
      class="w-32 h-32 rounded-full mx-auto mb-4 object-cover shadow ring-1 ring-zinc-400 dark:ring-zinc-700"
    />

    <!-- Header / Name -->
    <div class="flex items-center justify-center">
      <h1 class="text-3xl font-bold mb-2 text-zinc-900 dark:text-white tracking-tight">Jorge Perez</h1>
        <div class="ml-1.5">
          <img class="w-4 h-4" src="data:image/svg+xml;base64," alt="Verified profile" data-testid="verificationTick">
        </div>
    </div>

    <!-- Typewriter subheader: hydrated on page load -->
    <TypewriterText client:load />

    <!-- Links -->
    <div class="mt-8 flex flex-col gap-4">
      {links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-1.5 px-4 py-4 rounded-full bg-white dark:bg-zinc-900 ring-1 ring-zinc-300 dark:ring-zinc-700  hover:bg-zinc-200  dark:hover:bg-zinc-700 text-zinc-700 dark:text-white font-medium hover:shadow"
        >
          <Icon name={link.icon} class="w-5 h-5" aria-label={link.name} />
          {link.name}
        </a>
      ))}
    </div>
  </main>
</Layout>
